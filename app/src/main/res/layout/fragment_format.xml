<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/formatMainIcon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:contentDescription="@string/content_description_sword_axe_shield"
        android:src="@drawable/sword_axe_shield"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/formatDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Start Game:"
        android:textColor="#aaa"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/formatMainIcon" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/formatRecycler"
        app:layout_constraintTop_toBottomOf="@+id/formatDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

</android.support.constraint.ConstraintLayout>